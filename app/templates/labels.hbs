 <h1> Choose the coloumn the represents the outcome </h1>

<div class="row">
   <div class="col" style="margin-left: 15%;">
   </div>
   <div class="col" >
      <div class="ui form">
         <div class="grouped inline fields">
            {{#each model as |item|}}
            <div class="field">
               {{ui-radio name="label" label=item value=item disabled=isDisabled current=label onChange=(action (mut label))}}
            </div>
            {{/each}}
         </div>
      </div>
      <div class="ui label">
         Current label - {{label}}
      </div>
   </div>
   <div class="col" >
 
      {{next}}
      
      {{#if next}}
          {{#link-to 'predictfor'}} >>>>> NEXT >>>>>{{/link-to}}
      {{else}}
      <button class="btn btn-primary" {{action 'redirectTo'}}>Done</button>
      {{/if}}
   </div>
</div>